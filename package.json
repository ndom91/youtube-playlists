{
  "name": "youtube-playlists",
  "description": "Create on-the-fly YouTube playlists",
  "version": "4.0.0",
  "author": "ndom91 <yo@ndo.dev>",
  "homepage": "https://youtube.ndo.dev",
  "repository": "https://github.com/ndom91/youtube-playlists",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ndom91/youtube-playlists/issues"
  },
  "scripts": {
    "dev": "next dev -p 3005",
    "build": "next build",
    "start": "next start",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "cy:ci": "cypress run --record",
    "lint:css": "stylelint './src/**/styled.js'",
    "prettier": "prettier --check \"src/**/*.js\"",
    "prettier:fix": "prettier --write \"src/**/*.js\" && stylelint --fix 'src/**/styled.js' "
  },
  "dependencies": {
    "lodash.debounce": "^4.0.8",
    "next": "^12.1.6",
    "react": "^18.1.0",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "react-dom": "^18.1.0",
    "react-toastify": "^9.0.4",
    "react-youtube": "^9.0.2",
    "styled-components": "^5.3.5",
    "styled-media-query": "^2.1.2",
    "zustand": "^3.7.2"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.7",
    "cypress": "^10.0.3",
    "lint-staged": "^13.0.1",
    "postcss": "^8.4.14",
    "prettier": "^2.6.2",
    "prettier-plugin-tailwindcss": "^0.1.11",
    "stylelint": "^14.9.0",
    "stylelint-config-recommended": "^8.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.10.0",
    "tailwindcss": "^3.0.24"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "/src/**/*.js": "npm run lint:css",
    "/src/**/*.{js,jsx}": "stylelint --fix"
  },
  "prettier": {
    "singleQuote": true,
    "semi": false
  },
  "stylelint": {
    "processors": [
      "stylelint-processor-styled-components"
    ],
    "extends": [
      "stylelint-config-recommended",
      "stylelint-config-styled-components"
    ]
  }
}
